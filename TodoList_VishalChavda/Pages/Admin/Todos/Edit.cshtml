@page
@model TodoList_VishalChavda.Pages.Admin.Todos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Todo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Todo.TodoId" />
            <div class="form-group">
                <label asp-for="Todo.Title" class="control-label"></label>
                <input asp-for="Todo.Title" class="form-control" />
                <span asp-validation-for="Todo.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.Description" class="control-label"></label>
                <input asp-for="Todo.Description" class="form-control" />
                <span asp-validation-for="Todo.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Todo.IsDone" /> @Html.DisplayNameFor(model => model.Todo.IsDone)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Todo.CompletionDate" class="control-label"></label>
                <input asp-for="Todo.CompletionDate" class="form-control" />
                <span asp-validation-for="Todo.CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p><a asp-page="./Index">Back to list</a> | <a asp-page="/Index">Home</a></p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
