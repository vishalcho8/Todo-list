@page 
@model TodoList_VishalChavda.Pages.Admin.Todos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Todos</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].IsDone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].CompletionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Todo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TodoId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TodoId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TodoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="/Index">Home</a>
</div>